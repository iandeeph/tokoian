{{#section 'title'}}
    {{title}}
{{/section}}
{{error}}

<div id="printPage" class="row almost-full">
    <div class="row">
        <div class="col s12 border-bottom mt-20 valign-wrapper">
            <div class="col s6" id="logoframe">
                <img class="mt-10 ml-10 logo-print" title="" alt="" src="images/logo.png">
            </div>
            <div class="col s6 right-align mt-20 mb-20">
                {{#each company}}
                    <span class="bold">{{nama}}</span><br>
                    <span>{{telp}}</span><br>
                    <span>{{alamat}}</span>
                {{/each}}
            </div>
        </div>
        <div class="col s12 mt-20 valign-wrapper">
            <div class="col s5">
                {{#each rows}}
                    <span>Bill to :</span><br>
                    <span class="bold">{{this.0.customer}}</span><br>
                    <span>{{this.0.telp}}</span><br>
                    <span>{{this.0.alamat}}</span>
                {{/each}}
            </div>
            <div class="col s3 right-align">
                <span>Invoice Number :</span><br>
                <span>Invoice Date :</span><br>
                <span>Due Date :</span><br>
            </div>
            <div class="col s4 right-align">
                {{#each rows}}
                    <span>{{this.0.soid}}</span><br>
                    <span>Immediately</span><br>
                    <span>{{readableFullDate this.0.tanggal}}</span><br>
                {{/each}}
            </div>
        </div>
        <div class="col s12 mt-20">
            <div class="home-table row">
                <table class="bordered">
                    <thead>
                    <tr class="border-bottom">
                        <th width="3%">Code</th>
                        <th width="10%">Item</th>
                        <th width="3%">Qty</th>
                        <th width="5%">Price</th>
                        <th width="5%">Total</th>
                    </tr>
                    </thead>
                    <tbody>
                        {{#each rows}}
                            {{#each this}}
                                {{#compare idkode NULL operator="!="}}
                                    <tr>
                                        <td class="center">{{kode}}</td>
                                        <td>{{nama}}</td>
                                        <td class="center">{{jumlah}}</td>
                                        <td class="right-align">{{formatRupiah hargajual}}</td>
                                        <td class="right-align">{{formatRupiah total}}</td>
                                    </tr>
                                {{/compare}}
                            {{/each}}
                            <tr>
                                <td colspan="4">Grand Total</td>
                                <td class="right-align">
                                    {{#each this}}
                                        {{#compare grandTotal NULL operator="!="}}
                                            {{formatRupiah grandTotal}}
                                        {{/compare}}
                                    {{/each}}
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col s12 mt-20 right-align">
            <span class="font-40 right-align">Total :</span><br>
            <span class="font-40 right-align">
                {{#each rows}}
                    {{#each this}}
                        {{#compare grandTotal NULL operator="!="}}
                            {{formatRupiah grandTotal}}
                        {{/compare}}
                    {{/each}}
                {{/each}}
            </span><br>
        </div>
    </div>
</div>