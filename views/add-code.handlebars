{{#section 'title'}}
    Tambah Kode Produk
{{/section}}
{{error}}

<div class="row container">
    <div class="col s12 mt-20">
        <div class="col s12 mb-20 mt-20 center">
            <span class="font-40">Tambah Kode Produk</span>
        </div>
        <div class="col s12">
            <span class="font-20 {{message.color}}-text" id="message">{{message.text}}</span>
        </div>
        <div class="row">
            <form action="" method="post">
                <div class="col s12 container">
                    <div class="row" id="kodeField">
                        <div class="row">
                            <div class="input-field col s4">
                                <input id="kode-produk" name="add[0][kode]" type="text" class="validate" required>
                                <label for="kode-produk">Kode Produk</label>
                            </div>
                            <div class="input-field col s6">
                                <input id="nama-produk" name="add[0][nama]" type="text" class="validate" required>
                                <label for="nama-produk">Nama Produk</label>
                            </div>
                            <div class="col s2 mt-10">
                                <a class="btn-floating btn waves-effect waves-light green darken-3" id="btnAddKode" title="Tambah Kode"><i class="material-icons">add</i></a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s10 ">
                            <div class="input-field mt-20">
                                <button type="submit" name="addCodeSubmit" id="addCodeSubmit-bot" class="waves-effect waves-light btn blue darken-3 right">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>