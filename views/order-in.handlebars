{{#section 'title'}}
    Barang Masuk
{{/section}}
{{error}}

<div class="row container">
    <div class="col s12 mt-20">
        <div class="col s12 mb-20 mt-20 center">
            <span class="font-40">Barang Masuk</span>
        </div>
        <div class="row">
            <div class="col s12">
                <span class="font-20 {{message.color}}-text" id="message">{{message.text}}</span>
            </div>
        </div>
        <div class="row">
            <form action="" method="post">
                <div class="col s12 container">
                    <div class="row">
                        <div class="col s12">
                            <span class="font-20 ">Order ID : {{orderid}}</span>
                        </div>
                    </div>
                    <div class="row" id="orderInField">
                        <div class="row">
                            <div class="input-field col s10 m3 l3">
                                <input id="orderId" name="inOrder[0][orderid]" type="hidden" value="{{orderid}}">
                                <select id="kode-produk-orderin" name="inOrder[0][kode]" class="validate" required>
                                    <option value="" disabled selected>Pilih Kode Produk</option>
                                    {{#each kodeRow}}
                                        <option value="{{encodeURI kode}}">{{kode}}</option>
                                    {{/each}}
                                </select>
                                <label for="kode-produk">Kode Produk</label>
                            </div>
                            <div class="col s1 mt-10 mr-10 hide-on-med-and-up">
                                <a class="btn-floating btn waves-effect waves-light green darken-3" id="btnAddOrderIn-top" title="Tambah Barang"><i class="material-icons">add</i></a>
                            </div>
                            <div class="input-field col s12 m4 l4">
                                <input id="nama-produk" name="inOrder[0][nama]" type="text" class="validate" disabled required>
                                <label for="nama-produk">Nama Produk</label>
                            </div>
                            <div class="input-field col s12 m2 l2">
                                <input id="hargaBeli" name="inOrder[0][hargabeli]" type="text" class="validate" required>
                                <label for="hargaBeli">Harga Beli</label>
                            </div>
                            <div class="input-field col s12 m2 l2">
                                <input id="jumlah" name="inOrder[0][jumlah]" type="text" class="validate" required>
                                <label for="jumlah">Jumlah</label>
                            </div>
                            <div class="col m1 l1 mt-10 hide-on-small-only">
                                <a class="btn-floating btn waves-effect waves-light green darken-3" id="btnAddOrderIn-bot" title="Tambah Barang"><i class="material-icons">add</i></a>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12 ">
                            <div class="input-field mt-20">
                                <button type="submit" name="ordeInSubmit" id="ordeInSubmit" class="waves-effect waves-light btn blue darken-3 right">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>