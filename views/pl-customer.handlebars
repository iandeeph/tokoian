{{#section 'title'}}
    Customer Price List
{{/section}}
{{error}}

<div class="row almost-full">
    <div class="col s12 mt-20">
        <div class="col s12 mb-20 mt-20 center">
            <span class="font-40">Price List</span><br>
            <span class="font-40">{{customer.nama}}</span><br>
            <span class="font-20">({{customer.alamat}})</span>
        </div>
        <div class="row">
            <div class="col s12">
                <a class="btn-floating btn-large waves-effect waves-light grey left modal-trigger" title="Kembali ke List Customer" href="/customer-list"><i class="material-icons">keyboard_backspace</i></a>
            </div>
            <div class="col s12">
                <span class="font-20 {{message.color}}-text" id="message">{{message.text}}</span>
            </div>
        </div>
        <div class="row">
            <div class="col s12 almost-full">
                <div class="home-table row">
                    <table class="bordered">
                        <thead>
                        <tr class="border-bottom">
                            <th width="7%">Kode Barang</th>
                            <th width="10%">Nama</th>
                            {{#compare priv '1' operator="=="}}
                                <th width="5%">Harga Beli</th>
                            {{/compare}}
                            <th width="5%">Harga Jual</th>
                            {{#compare priv '1' operator="=="}}
                                <th width="1%">
                                </th>
                            {{/compare}}
                        </tr>
                        </thead>
                        <tbody>
                        {{#each rows}}
                            <tr>
                                <td>{{kode}}</td>
                                <td>{{namabarang}}</td>
                                {{#compare ../priv '1' operator="=="}}
                                    <td>{{numberFormat hargabeli}}</td>
                                {{/compare}}
                                <td>{{numberFormat hargajual}}</td>
                                {{#compare ../priv '1' operator="=="}}
                                    <td>
                                        <a id="modalEditBtn{{idkode}}" data-text="{{idkode}}" class="btn-floating btn waves-effect waves-light blue modal-trigger" title="Edit" href="#editPl{{idkode}}"><i class="material-icons">edit</i></a>

                                        <div id="editPl{{idkode}}" class="modal">
                                            <form action="" method="post">
                                                <div class="modal-content">
                                                    <div class="col s12">
                                                        <div class="col s12 mb-20 mt-20 center">
                                                            <span class="font-40">Edit Price List</span>
                                                        </div>
                                                    </div>
                                                    <div class="hide-on-med-and-up">
                                                        <div class="row">
                                                            <div class="col s12 valign-wrapper border-bottom">
                                                                <div class="col s3">
                                                                    <span>Kode</span>
                                                                </div>
                                                                <div class="col s9 valign-wrapper">
                                                                    <div class="col s1">
                                                                        <span>:</span>
                                                                    </div>
                                                                    <div class="col s10">
                                                                        <span>{{kode}}</span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col s12 valign-wrapper border-bottom">
                                                                <div class="col s3">
                                                                    <span>Nama</span>
                                                                </div>
                                                                <div class="col s9 valign-wrapper">
                                                                    <div class="col s1">
                                                                        <span>:</span>
                                                                    </div>
                                                                    <div class="col s10">
                                                                        <span>{{namabarang}}</span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col s12 valign-wrapper border-bottom">
                                                                <div class="col s3">
                                                                    <span>Harga Beli</span>
                                                                </div>
                                                                <div class="col s9 valign-wrapper">
                                                                    <div class="col s1">
                                                                        <span>:</span>
                                                                    </div>
                                                                    <div class="col s10">
                                                                        <span>{{numberFormat hargabeli}}</span>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="hide-on-small-only">
                                                        <div class="row">
                                                            <div class="col s12">
                                                                <div class="col s9">
                                                                    <div class="col s12 valign-wrapper">
                                                                        <div class="col l3 m4">
                                                                            <span class="font-20">Kode Barang</span>
                                                                        </div>
                                                                        <div class="col l9 m8">
                                                                            <span class="font-20">: {{kode}}</span>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col s12 valign-wrapper">
                                                                        <div class="col l3 m4">
                                                                            <span class="font-20">Nama</span>
                                                                        </div>
                                                                        <div class="col l9 m8">
                                                                            <span class="font-20">: {{namabarang}}</span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col s9">
                                                                    <div class="col s12 valign-wrapper">
                                                                        <div class="col l3 m4">
                                                                            <span class="font-20">Harga Beli</span><br>
                                                                        </div>
                                                                        <div class="col l9 m8">
                                                                            <span class="font-20">: {{numberFormat hargabeli}}</span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="input-field col s12">
                                                            <input id="hargaJual{{idkode}}" name="editPl[hargajual]" value="{{numberFormat hargajual}}" type="text" class="validate" required>
                                                            <label for="hargaJual{{idkode}}">Harga Jual</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer modal-fixed-footer">
                                                    <input name="editPl[namatoko]" type="hidden" value="{{../customer.nama}}">
                                                    <input name="editPl[kodebarang]" type="hidden" value="{{kode}}">
                                                    <input name="editPl[namabarang]" type="hidden" value="{{namabarang}}">
                                                    <input name="editPl[customer]" type="hidden" value="{{../customer.id}}">
                                                    <button type="submit" name="editPlBtn"  value="{{encrypt idkode}}" id="editPlBtn{{idkode}}" class="modal-close waves-effect waves-light btn orange darken-3 left ml-10 mb-10">Submit</button>
                                                    <a href="#!" class="modal-close waves-effect waves-light btn grey darken-1 left mb-10 ml-10">Tutup</a>
                                                </div>
                                            </form>
                                        </div>
                                    </td>
                                {{/compare}}
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>