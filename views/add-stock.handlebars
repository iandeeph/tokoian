{{#section 'title'}}
    Tambah Stock
{{/section}}
{{error}}

<div class="row almost-full">
    <div class="col s12 mt-20">
        <div class="col s12 mb-20 mt-20 center">
            <span class="font-40">Tambah Stock</span>
        </div>
        <div class="col s12">
            <span class="font-20 {{message.color}}-text" id="message">{{message.text}}</span>
        </div>
        <div class="row">
            <form action="" method="post">
                <div class="col s12 almost-full">
                    <!--<div class="row">-->
                        <!--<div class="input-field">-->
                            <!--<button type="submit" name="addStockSubmit" id="addStockSubmit" class="waves-effect waves-light btn blue darken-3 left">Submit</button>-->
                        <!--</div>-->
                    <!--</div>-->
                    <div class="home-table row">
                        <table class="bordered">
                            <thead>
                                <tr class="border-bottom">
                                    <th width="17%">Kode Barang</th>
                                    <th width="8%">Merek</th>
                                    <th width="13%">Nama Barang</th>
                                    <th width="7%">Jenis</th>
                                    <th width="7%">Harga Beli</th>
                                    <th width="7%">Harga Jual</th>
                                    <th width="12%">Deskripsi Barang</th>
                                    <th width="3%">Jumlah</th>
                                    <th width="7%">Catatan</th>
                                    <th width="3%">Action</th>
                                </tr>
                            </thead>
                            <tbody id="addStockBlock">
                                <tr>
                                    <td><input class="inputListGroup autocompleteStock" id="addStockKode-1" name="listStock[1][kode]" type="text" required></td>
                                    <td><input class="inputListGroup disabled" id="addStockMerek-1" name="listStock[1][merek]" type="text" disabled></td>
                                    <td><input class="inputListGroup disabled" id="addStockNama-1" name="listStock[1][nama]" type="text" disabled></td>
                                    <td><input class="inputListGroup disabled" id="addStockJenis-1" name="listStock[1][jenis]" type="text" disabled></td>
                                    <td><input class="inputListGroup" id="addStockHargabeli-1" name="listStock[1][hargabeli]" type="text" required></td>
                                    <td><input class="inputListGroup" id="addStockHargajual-1" name="listStock[1][hargajual]" type="text" required></td>
                                    <td><textarea class="materialize-textarea inputListGroup disabled" id="addStockDesc-1" name="listStock[1][deskripsi]" disabled></textarea></td>
                                    <td><input class="inputListGroup" id="addStockJumlah-1" name="listStock[1][jumlah]" type="number" required></td>
                                    <td><textarea class="materialize-textarea inputListGroup disabled" id="addStockCatatan-1" name="listStock[1][catatan]" disabled></textarea></td>
                                    <td class="center"><a class="btn-floating btn waves-effect waves-light green darken-3" id="btnAddRow" title="Tambah Stock"><i class="material-icons">add</i></a></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="input-field mt-20">
                            <button type="submit" name="addStockSubmit" id="addStockSubmit" class="waves-effect waves-light btn blue darken-3 left">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>