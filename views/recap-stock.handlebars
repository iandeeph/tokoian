{{#section 'title'}}
    Rekap Stock
{{/section}}
{{error}}

<div class="row almost-full">
    <div class="col s12 mt-20">
        <div class="col s12 mb-20 mt-20 center">
            <span class="font-40">Rekap Stock</span>
        </div>
        <div class="col s12">
            <span class="font-20 {{message.color}}-text" id="message">{{message.text}}</span>
        </div>
        <div class="row">
            <form action="" method="post">
                <div class="col s12 almost-full">
                    <div class="home-table row">
                        <table class="bordered">
                            <thead>
                            <tr class="border-bottom">
                                <th width="2%">No</th>
                                <th width="5%">Kode Barang</th>
                                <th width="13%">Nama Barang</th>
                                <th width="10%">Jenis</th>
                                <th width="5%">Harga Beli</th>
                                <th width="5%">Harga Jual</th>
                                <th width="15%">Deskripsi Barang</th>
                                <th width="3%">Jumlah</th>
                                <th width="10%">Catatan</th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each rows}}
                                <tr>
                                    <td>{{numbyIndex @key}}</td>
                                    <td>{{kode}}</td>
                                    <td>{{nama}}</td>
                                    <td>{{jenis}}</td>
                                    <td>{{numberFormat hargabeli}}</td>
                                    <td>{{numberFormat hargajual}}</td>
                                    <td>{{deskripsi}}</td>
                                    <td>{{zeroOrNumber jumlah}}</td>
                                    <td>{{catatan}}</td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>