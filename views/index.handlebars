{{#section 'title'}}
    Dashboard
{{/section}}
{{error}}

<div class="row container">
    <div class="col s12 mt-20">
        <div class="row center">
            <div class="col s12 mb-20 mt-20 center">
                <span class="font-40">Dashboard Penjualan</span><br><span class="font-40">{{bulanTahun.bulantahun}}</span>
            </div>
            <div class="row">
                <div class="col s12 almost-full">
                    <canvas id="topSaleChart" width="400" height="150"></canvas>
                </div>
            </div>
            <div class="col s12 mb-20 mt-20 center">
                <span class="font-40">Open Sales Order</span>
            </div>
        </div>
        <div class="row">
            <div class="col s12 almost-full">
                <div class="home-table row">
                    <table class="bordered">
                        <thead>
                        <tr class="border-bottom">
                            <th width="7%">Sales Order ID</th>
                            <th width="5%">Tanggal</th>
                            <th width="5%">Nama Customer</th>
                            <th width="5%">Status</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each rows}}
                                <tr>
                                    <td>{{this.0.soid}}</td>
                                    <td>{{readableDate this.0.tanggal}}</td>
                                    <td>{{this.0.customer}}</td>
                                    <td>{{this.0.status}}</td>
                                </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>