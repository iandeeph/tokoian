{{#section 'title'}}
    Input Pengeluaran
{{/section}}
{{error}}

<div class="row container">
    <div class="col s12 mt-20">
        <div class="col s12 mb-20 mt-20 center">
            <span class="font-40">Input Pengeluaran</span>
        </div>
        <div class="row">
            <form action="" method="post">
                <div class="col s12 container">
                    <div class="row">
                        <div class="col s12">
                            <span class="font-20 ">Sales Order ID : {{orderid}}</span>
                            <a class="btn-floating btn-large waves-effect waves-light blue right modal-trigger" title="Ke Rekap Sales Order" href="/recap-expense"><i class="material-icons">keyboard_arrow_right</i></a>
                        </div>
                    </div>
                    <div class="row" id="expenseField">
                        <div class="row">
                            <div class="input-field col s10 m7 l7">
                                <input id="orderId" name="addExpense[0][orderid]" type="hidden" value="{{orderid}}">
                                <input id="expense" name="addExpense[0][nama]" type="text" class="validate" required>
                                <label for="expense">Deskripsi Pengeluaran</label>
                            </div>
                            <div class="col s1 mt-10 mr-10 hide-on-med-and-up">
                                <a class="btn-floating btn waves-effect waves-light green darken-3" id="btnAddExp-top" title="Tambah Barang"><i class="material-icons">add</i></a>
                            </div>
                            <div class="input-field col s12 m3 l3">
                                <input id="nominal" name="addExpense[0][nominal]" type="text" class="validate" required>
                                <label for="nominal">Nominal</label>
                            </div>
                            <div class="col m1 l1 mt-10 hide-on-small-only">
                                <a class="btn-floating btn waves-effect waves-light green darken-3" id="btnAddExp-bot" title="Tambah Barang"><i class="material-icons">add</i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col s12">
                        <span class="font-20 {{message.color}}-text" id="message">{{message.text}}</span>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            <div class="input-field mt-20">
                                <button type="submit" name="addExpenseSubmit" id="addExpenseSubmit" class="waves-effect waves-light btn blue darken-3 right">Submit Pengeluaran</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>